<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_profile_afterRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="#FFFBDE">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_corner"
        android:backgroundTint="#90D1CA"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/profile_photo"
            android:src="@drawable/user"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center">


            <HorizontalScrollView
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner"
                    android:backgroundTint="#129990"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/hair_color_black"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:layout_marginStart="11dp"
                        android:focusable="true"
                        android:src="@drawable/hair_black"
                        android:scaleType="centerInside"
                        android:padding="4dp"
                        android:clickable="true"/>

                    <ImageButton
                        android:id="@+id/hair_color_brown"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:layout_marginStart="7.5dp"
                        android:src="@drawable/hair_brown"
                        android:scaleType="centerInside"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/hair_color_blonde"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:layout_marginStart="7.5dp"
                        android:src="@drawable/hair_blonde"
                        android:scaleType="centerInside"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/hair_color_blue"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="7.5dp"
                        android:background="@drawable/circle"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/hair_blue" />

                    <ImageButton
                        android:id="@+id/hair_color_pink"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:layout_marginStart="7.5dp"
                        android:src="@drawable/hair_pink"
                        android:scaleType="centerInside"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/hair_color_red"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:layout_marginStart="7.5dp"
                        android:src="@drawable/hair_red"
                        android:scaleType="centerInside"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/hair_color_purple"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:layout_marginStart="7.5dp"
                        android:src="@drawable/hair_purple"
                        android:scaleType="centerInside"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/hair_color_green"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:layout_marginStart="7.5dp"
                        android:src="@drawable/hair_green"
                        android:scaleType="centerInside"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>


                    <ImageButton
                        android:id="@+id/hair_color_white"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:layout_marginStart="7.5dp"
                        android:src="@drawable/hair_white"
                        android:scaleType="centerInside"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/hair_color_unspecified"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle"
                        android:layout_marginStart="7.5dp"
                        android:src="@drawable/unspecified"
                        android:scaleType="centerInside"
                        android:padding="4dp"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="115dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:text="Height:"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:text="Weight:"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#90D1CA"
                        android:src="@drawable/height"
                        android:padding="5dp"/>

                    <EditText
                        android:id="@+id/height"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50sp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#FFFBDE"
                        android:inputType="numberDecimal" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="50dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#90D1CA"
                        android:src="@drawable/weight"
                        android:padding="5dp"/>

                    <EditText
                        android:id="@+id/weight"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50sp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#FFFBDE"
                        android:inputType="numberDecimal" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="15dp"
                    android:text="Phone:"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="15dp"
                    android:text="Age:"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/phone"
                        android:padding="5dp"/>

                    <EditText
                        android:id="@+id/phone_number"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50sp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#FFFBDE"
                        android:inputType="phone"
                        android:maxLength="10"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-120dp">

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#FFFBDE"
                        android:inputType="number"
                        android:maxLength="2"
                        android:textSize="14sp"
                        android:textAlignment="center"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/update_user_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Update User"
            android:backgroundTint="#096B68"/>

    </LinearLayout>

</RelativeLayout>