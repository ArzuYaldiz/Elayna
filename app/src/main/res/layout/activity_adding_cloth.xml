<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#90D1CA">

        <ImageView
            android:id="@+id/cloth_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="#FFFBDE"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"/>

        <Spinner
            android:id="@+id/season_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="#129990"/>

        <Spinner
            android:id="@+id/section_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="#129990"/>

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:background="#129990"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/upload_cloth_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:backgroundTint="#096B68"
                android:text="Upload" />

            <Button
                android:id="@+id/okay_cloth_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#096B68"
                android:text="Okay"/>

        </LinearLayout>





    </LinearLayout>

</RelativeLayout>