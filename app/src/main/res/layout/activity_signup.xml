<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:background="#FFFBDE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_corner"
        android:backgroundTint="#FFFBDE"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="219dp"
            android:layout_height="72dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:background="@drawable/round_corner">

            <View
                android:layout_width="219dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:background="@drawable/round_corner"
                android:backgroundTint="#90D1CA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Say Hi to Elayna"
                android:layout_marginTop="-15dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#3A0519"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Your personal fashion designer"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#3A0519"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#90D1CA"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:text="User Name: "
                    android:textColor="#3A0519"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="132dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="130dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#FFFBDE"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp">
                    </EditText>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:text="Email: "
                    android:textColor="#3A0519"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="132dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="130dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#FFFBDE"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp">
                    </EditText>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:text="Password: "
                    android:textColor="#3A0519"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="132dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="130dp"
                        android:layout_height="19dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#FFFBDE"
                        android:inputType="textPassword"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp">
                    </EditText>
                </FrameLayout>
            </LinearLayout>

            <Button
                android:id="@+id/register_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:backgroundTint="#096B68"
                android:text="Sign Up"
                android:textColor="#3A0519">
            </Button>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-10dp"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#129990">
        </View>

        <ImageButton
            android:id="@+id/return_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-70dp"
            android:background="@drawable/ic_return_button" />

    </LinearLayout>

</RelativeLayout>
